{
    "name": "pega-mashup-web-component",
    "version": "0.0.0",
    "description": "Pega Mashup Web Component",
    "license": "MIT",
    "scripts": {
        "dev": "cross-env BABEL_ENV=build rollup --config rollup.config.dev.js --watch",
        "build": "cross-env BABEL_ENV=build rollup --config rollup.config.prod.js && workbox generateSW workbox-config.js",
        "lint": "eslint src/**/*.js --fix; exit 0",
        "test": "mkdir -p test-results && cross-env BABEL_ENV=test jest",
        "test:watch": "cross-env BABEL_ENV=test jest --watch",
        "test:coverage": "cross-env BABEL_ENV=test jest --coverage --colors"
    },
    "jest": {
        "preset": "jest-puppeteer"
    },
    "devDependencies": {
        "@babel/cli": "*",
        "@babel/core": "*",
        "@babel/plugin-proposal-class-properties": "*",
        "@babel/plugin-proposal-decorators": "*",
        "@babel/preset-env": "*",
        "axe-puppeteer": "*",
        "babel-eslint": "*",
        "babel-jest": "*",
        "babel-preset-jest": "*",
        "cross-env": "*",
        "eslint": "*",
        "eslint-config-airbnb-base": "*",
        "eslint-plugin-import": "*",
        "eslint-plugin-jest": "*",
        "jest": "*",
        "jest-environment-puppeteer": "*",
        "jest-puppeteer": "*",
        "puppeteer": "*",
        "rollup": "*",
        "rollup-plugin-babel": "*",
        "rollup-plugin-cleaner": "*",
        "rollup-plugin-copy": "*",
        "rollup-plugin-eslint": "*",
        "rollup-plugin-html-minifier": "*",
        "rollup-plugin-node-resolve": "*",
        "rollup-plugin-serve": "*",
        "rollup-plugin-terser": "*",
        "rollup-watch": "*"
    },
    "dependencies": {
        "lit-element": "*",
        "lit-html": "*",
        "workbox-cli": "*"
    }
}
